<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="CSS/header.css">
    <link rel="stylesheet" type="text/css" href="CSS/footer.css">
    <link rel="stylesheet" href="CSS/account.css">
    <title>My Account</title>
</head>

<body>
    <div id="container">
        <div id="topNav">
            <%- include('./partials/header.ejs') %>
        </div>

        <div id="biggerContainer">
            <div id="bodyContainer">

                <div class="accountFlex">
                    <div id="left-col" class="col">
                        <div id="person" class="nav-item">
                            <span id="initials">JD</span>
                            <div id="intro">
                                <span id="hi">Hi, </span>
                                <br>
                                <span id="name">John Doe</span>
                            </div>
                        </div>

                        <div class="nav-item" onclick="setTimeout(AccountOneAtATime, 50, 'details');">
                            <!-- <span><img src="" alt=""></span> -->
                            <span>My details</span>
                        </div>
                        <!-- <div class="nav-item" onclick="OneAtATime('payment-methods')">
                            <span><img src="" alt=""></span>
                            <span>Payment methods</span>
                        </div> -->
                        <div class="nav-item" onclick="setTimeout(AccountOneAtATime, 50, 'chat');">
                            <!-- <span><img src="" alt=""></span> -->
                            <span>Chat</span>
                        </div>
                        <div class="nav-item" onclick="setTimeout(AccountOneAtATime, 50, 'sign-out'); ShowOverlay('sign-out')">
                            <!-- <span><img src="" alt=""></span> -->
                            <span>Sign out</span>
                        </div>
                    </div>

                    <div id="right-col" class="col">

                        <div class="account-only-one account-active" id="details">
                            <h3>My details</h3>
                            <h5>Personal Information</h5>
                            <hr>
                            <div id="display-names" class = "section">
                                <label class="display-label">FIRST NAME</label>
                                <input disabled class="display-input" id="display-firstname" type="text"
                                    placeholder="John">

                                <label class="display-label">LAST NAME</label>
                                <input disabled class="display-input" id="display-lastname" type="text"
                                    placeholder="Doe">
                            </div>

                            <h5>E-mail address</h5>
                            <hr>

                            <div class = "section">
                                    <label class="display-label">E-MAIL ADDRESS</label>
                                    <input disabled class="display-input" type="text"
                                        placeholder="johndoe123@gmail.com">
                            </div>
                        </div>

                        
                        
                        <div class="account-only-one" id="chat">
                            <div class="test">
                                <div class="card">
                                    <div class="chat-header">Chat</div>
                                    <div class="chat-window">
                                        <ul class="message-list"></ul>
                                    </div>
                                    <div class="chat-input">
                                        <input type="text" class="message-input" placeholder="Type your message here">
                                        <button class="send-button">Send</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <footer class="footer">
                <%- include('./partials/footer.ejs') %>  
        </footer>
    </div>

    </div>

    </div>

    <div class="account-only-one overlay-div" id="sign-out">
        <div>
            <h4 class="center">Are you sure you want to sign out?</h4>
        </div>

        <div class="center">
            <a href="/"><button class="signout-button">Sign Out</button></a>
        </div>
    </div>

    <script src="../JS/overlay.js"></script>
    <script src="../JS/account.js"></script>
    <script src="../JS/header.js"></script>
</body>

</html>