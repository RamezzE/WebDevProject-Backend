<html lang="en">
  <head>
    <%- include('./partials/head.ejs') %>
    <title>Payment</title>
    <link rel="stylesheet" type="text/css" href="../CSS/checkout.css" />
    <link rel="stylesheet" type="text/css" href="../CSS/footer.css" />
    <link rel="stylesheet" type="text/css" href="../CSS/header.css" />
  </head>
  
  <body>
    <div id="container">
      <div id="topNav"><%- include('./partials/header.ejs') %></div>
      <div id="biggerContainer">
        <div id="bodyContainer">
          <div class="rowcart bigCart">
            <div class="col-75cart">
              <div class="containercart">
                <form action="/checkout" method="post" id="form">
                  <div class="rowcart">
                    <div class="col-50cart">
                      <h3>Billing Address</h3>
                      <label for="fname"
                        ><i class="fa fa-user"></i> Full Name</label
                      >
                      <input
                        type="text"
                        id="fname"
                        name="fullname"
                        placeholder="John M. Doe"
                        class="check"
                      />
                      <span class="highlight"></span>
                      <span class="bar"></span>
                      <span class="errorMsg" id="fullNameErrorMsg"
                        ><%= errorMsg && errorMsg.fullname? errorMsg.fullname :
                        '' %></span
                      >

                      <label for="email"> Email</label>
                      <input
                        type="text"
                        id="email"
                        class="check"
                        name="email"
                        placeholder="john@example.com"
                      />
                      <span class="highlight"></span>
                      <span class="bar"></span>
                      <span class="errorMsg" id="emailErrorMsg"
                        ><%= errorMsg && errorMsg.email? errorMsg.email : ''
                        %></span
                      >
                      <label for="adr"> Address</label>
                      <input
                        type="text"
                        id="address"
                        class="check"
                        name="address"
                        placeholder="542 W. 15th Street"
                      />
                      <span class="highlight"></span>
                      <span class="bar"></span>
                      <span class="errorMsg" id="AdressErrorMsg"
                        ><%= errorMsg && errorMsg.address? errorMsg.address : ''
                        %></span
                      >
                      <label for="city">City</label>
                      <input
                        type="text"
                        id="city"
                        name="city"
                        placeholder="New York"
                      />

                      <div class="rowcart">
                        <div class="col-50cart">
                          <label for="state">State</label>
                          <input
                            type="text"
                            id="state"
                            name="state"
                            placeholder="NY"
                            pattern="[A-Za-z]{2}"
                          />
                        </div>
                        <div class="col-50cart">
                          <label for="zip">Zip</label>
                          <input
                            type="text"
                            id="zip"
                            name="zip"
                            placeholder="10001"
                            pattern="[0-9]{5}"
                          />
                        </div>
                      </div>
                    </div>

                    <div class="col-50cart">
                      <h3>Payment</h3>
                      <label for="fname">Accepted Cards</label>
                      <div class="icon-containercart">
                        <i class="visa"><img src="../Images/Icons/visa.png" /></i>
                        <i class="mastercard"
                          ><img src="../Images/Icons/Mastercard.png"
                        /></i>
                      </div>
                      <label for="cname">Name on Card</label>
                      <input
                        type="text"
                        id="cname"
                        name="cardname"
                        placeholder="John More Doe"
                      />
                      <label for="fname"
                        ><i class="fa fa-user"></i> Credit Card Number</label
                      >
                      <input
                        type="text"
                        class="check"
                        id="cardnumber"
                        name="cardnumber"
                        placeholder="4444-4444-4444-4/444"
                      />
                      <span class="highlight"></span>
                      <span class="bar"></span>
                      <span class="errorMsg" id="CardErrorMsg"
                        ><%= errorMsg && errorMsg.cardnumber?
                        errorMsg.cardnumber : '' %></span
                      >
                      <label for="expmonth">Exp Month</label>
                      <input
                        type="text"
                        id="expmonth"
                        name="expmonth"
                        placeholder="2 digits"
                      />

                      <div class="rowcart">
                        <div class="col-50cart">
                          <label for="expyear">Exp Year</label>
                          <input
                            type="text"
                            id="expyear"
                            name="expyear"
                            placeholder="2 digits"
                          />
                        </div>
                        <div class="col-50cart">
                          <label for="cvv">CVV</label>
                          <input
                            type="text"
                            id="cvv"
                            name="cvv"
                            placeholder="352"
                          />
                        </div>
                      </div>
                    </div>
                  </div>
                  <label>
                    <input type="checkbox" checked="checked" name="sameadr" />
                    Shipping address same as billing
                  </label>
                  <input
                    type="submit"
                    value="Confirm Payment"
                    class="btncart"
                    onsubmit=""
                  />
                </form>
              </div>
            </div>
          </div>
        </div>

        <footer class="footer"><%- include('./partials/footer.ejs') %></footer>
      </div>
    </div>
  </body>

  <script src="../JS/header.js"></script>
  <script src="../JS/checkoutvalid.js"></script>
</html>
