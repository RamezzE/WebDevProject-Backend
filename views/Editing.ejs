<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" type="text/css" href="CSS/footer.css">
    <link rel="stylesheet" type="text/css" href="CSS/header.css">
    <link rel="stylesheet" type="text/css" href="CSS/register&login.css">

</head>

<body>

    <div id="container">
        <div id="topNav">
            <%- include('./partials/header.ejs') %>
        </div>

        <div id="biggerContainer">

            <div class="bodyContainer">
                <h1>Edit</h1>
                <div class="register">
                    <form action="/edit" method="post" id="form">
                        <div class="group">
                            <input type="text" name="oldpass" id="oldpass" class="input">
                            <span class="highlight"></span>
                            <span class="bar"></span>
                            <label>Old password</label>
                        </div>

                        <div id="error-div">
                            <span class="errorMsg" id="oldErrorMsg">
                              <%if( errorMsg && errorMsg.old) { %>
                                  <%=errorMsg.old%>
                              <%}%>
                            </span>
                        </div>

                        <div class="group">
                            <input type="password" id="Password" name="password" class="input">
                            <span class="highlight"></span>
                            <span class="bar"></span>
                            <label>New Password</label>
                        </div>

                        <div id="error-div">
                            <span class="errorMsg" id="passwordErrorMsg">
                              <%if( errorMsg && errorMsg.password) { %>
                                  <%=errorMsg.password%>
                              <%}%>
                            </span>
                        </div>

                        <div class="group">
                            <input type="password" id="ConfirmPass" name="confirmPass" class="input">
                            <span class="highlight"></span>
                            <span class="bar"></span>
                            <label>Confirm Password</label>
                        </div>

                        <div id="error-div">
                            <span class="errorMsg" id="confirmPassErrorMsg">
                              <%if( errorMsg && errorMsg.confirmPass) { %>
                                  <%=errorMsg.confirmPass%>
                              <%}%>
                            </span>
                        </div>

                        <button id="submit" class="button" type="submit">Edit</button>
                        <span>Success</span>
                    </form>
                    <a href="/account"><button class="button">Back</button></a>

                </div>
            </div>

            <footer class="footer">
                <%- include('./partials/footer.ejs') %>
            </footer>
        </div>
    </div>
    </div>

</body>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="../JS/header.js"></script>
<script src="../JS/editingvalid.js"></script>

</html>