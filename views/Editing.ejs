<html>

<head>
    <%- include('./partials/head.ejs') %>
    <title>Edit Details</title>
    <link rel="stylesheet" type="text/css" href="../CSS/footer.css">
    <link rel="stylesheet" type="text/css" href="../CSS/header.css">
    <link rel="stylesheet" type="text/css" href="../CSS/register&login.css">

</head>

<body>

    <div id="container">
        <div id="topNav">
            <%- include('./partials/header.ejs') %>
        </div>

        <div id="biggerContainer">

            <div class="bodyContainer">
                <h1>Edit Details</h1>
                <div class="register">
                    
                    <form action="/account/edit" method="post" id="form">

                        <span id = "successSpan" style="margin:20px"></span>

                        <div class="group">
                            <input type="text" name="firstName" id="firstName" class="input" value = "<%= user.firstName%>">
                            <span class="highlight"></span>
                            <span class="bar"></span>
                            <label>First Name</label>
                        </div>

                        <div id="error-div">
                            <span class="errorMsg" id = "firstNameErrorMsg">
                              <%if( errorMsg && errorMsg.firstName) { %>
                                  <%=errorMsg.firstName%>
                              <%}%>
                            </span>
                        </div>

                        <div class="group">
                            <input type="text" name="lastName" id="lastName" class="input" value = "<%= user.lastName%>">
                            <span class="highlight"></span>
                            <span class="bar"></span>
                            <label>Last Name</label>
                        </div>

                        <div id="error-div">
                            <span class="errorMsg" id = "lastNameErrorMsg">
                              <%if( errorMsg && errorMsg.lastName) { %>
                                  <%=errorMsg.lastName%>
                              <%}%>
                            </span>
                        </div>

                        <div class="group" >
                            <input type="email" name="email" id="email" class="input" value = "<%= user.email %>">
                            <span class="highlight"></span>
                            <span class="bar"></span>
                            <label>Email</label>
                        </div>

                        <div id="error-div">
                            <span class="errorMsg" id = "emailErrorMsg">
                              <%if( errorMsg && errorMsg.email) { %>
                                  <%=errorMsg.email%>
                              <%}%>
                            </span>
                        </div>

                        <div class="group">
                            <input type="password" name="oldpass" id="oldpass" class="input">
                            <span class="highlight"></span>
                            <span class="bar"></span>
                            <label>Old password</label>
                        </div>

                        <div id="error-div">
                            <span class="errorMsg" id="oldErrorMsg">
                              <%if( errorMsg && errorMsg.old) { %>
                                  <%=errorMsg.old%>
                              <%}%>
                            </span>
                        </div>

                        <div class="group">
                            <input type="password" id="Password" name="password" class="input">
                            <span class="highlight"></span>
                            <span class="bar"></span>
                            <label>New Password</label>
                        </div>

                        <div id="error-div">
                            <span class="errorMsg" id="passwordErrorMsg">
                              <%if( errorMsg && errorMsg.password) { %>
                                  <%=errorMsg.password%>
                              <%}%>
                            </span>
                        </div>

                        <div class="group">
                            <input type="password" id="ConfirmPass" name="confirmPass" class="input">
                            <span class="highlight"></span>
                            <span class="bar"></span>
                            <label>Confirm Password</label>
                        </div>

                        <div id="error-div">
                            <span class="errorMsg" id="confirmPassErrorMsg">
                              <%if( errorMsg && errorMsg.confirmPass) { %>
                                  <%=errorMsg.confirmPass%>
                              <%}%>
                            </span>
                        </div>

                        <button id="submit" class="button" type="submit">Edit my Details</button>
                        
                    </form>
                    <a href="/account"><button class="button">Back</button></a>

                </div>
            </div>

            <footer class="footer">
                <%- include('./partials/footer.ejs') %>
            </footer>
        </div>
    </div>
    </div>

</body>

<script src="../JS/header.js"></script>
<script src="../JS/editingvalid.js"></script>

</html>