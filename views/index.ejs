</head>

<body>
    <div id="container">
        <div id="topNav">
            <%- include('./partials/header.ejs') %>
        </div>

        <div id="biggerContainer">
            <div id="bodyContainer">
                <img class="mySlides" src="../Images/Homepage/image1.webp">
                <img class="mySlides" src="../Images/Homepage/slideshow1.jpg" style = "display:none">
                <img class="mySlides" src="../Images/Homepage/image.webp" style = "display:none">
                <img class="mySlides" src="../Images/Homepage/slideshow3.jpg" style = "display:none">
                
                <div class="containerXX">

                    <div class="containerx" onclick="window.location.href='/products?query=women+bags&page=0'">
                        <img src="../Images/Homepage/bag.jpg" alt="Avatar" class="image" >
                        <div class="overlay">
                            <div class="text">Bags</div>
                        </div>
                    </div>
                    
                    <div class="containerx" onclick="window.location.href='/products?query=women+shoes&page=0'">
                        <img src="../Images/Homepage/shoes.jpg" alt="Avatar" class="image" >
                        <div class="overlay">
                            <div class="text">Shoes</div>
                        </div>
                    </div>

                </div>

                <div class = "containerXX">

                    <div class="containerx" onclick = "window.location.href = '/products?query=man+bags&page=0'">
