                     </div>

                    <div class="containerx" onclick = "window.location.href='/products?query=man+shoes&page=0'">
                        <img src="../Images/Homepage/male_shoes.jpg" alt="Avatar" class="image" >
                        <div class="overlay">
                            <div class="text">Shoes</div>
                        </div>
                    </div>

                </div>
            </div>
            
            <footer class = "footer">
                <%- include('./partials/footer.ejs') %>
            </footer>

        </div>

    </div>

</body>

<script type="text/javascript">
    var myIndex = 0;
    function slider() {
        var images = document.getElementsByClassName("mySlides");
        for (var i = 0; i < images.length; i++)
            images[i].style.display = "none";
        if (myIndex > images.length - 1)
            myIndex = 0;
        images[myIndex].style.display = "block";
        myIndex++;
        setTimeout(slider, 2000);
    }
    slider();
</script>
<script src="https://cdn.jsdelivr.net/npm/darkmode-js@1.5.7/lib/darkmode-js.min.js"></script>
<script src="../JS/header.js"></script>

</html>