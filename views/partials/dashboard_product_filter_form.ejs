<!----------------------------- add product form ----------------------------->
<div id="filter-form-overlay" class="overlay-div">
    <p>Filter Products</p>
    <form method="post" action="products/addProduct" enctype="multipart/form-data">
        <div class="product-form-checkbox-div">
            <div>
                <label for="product-men-checkbox">
                    <input id="filter-men-checkbox" class="filter-form-checkbox" required name="productMen" type="checkbox">
                    <span></span>
                    Men
                </label>
            </div>
            <div>
                <label for="product-women-checkbox">
                    <input id="filter-women-checkbox" class="filter-form-checkbox" required name="productWomen" type="checkbox">
                    <span></span>
                    Women
                </label>
            </div>
            <div>
                <label for="product-kids-checkbox">
                    <input id="filter-kids-checkbox" class="filter-form-checkbox" required name="productKids" type="checkbox">
                    <span></span>
                    Kids
                </label>
            </div>
        </div>

        <div class="product-form-checkbox-div">
            <div>
                <label for="product-shoes-checkbox">
                    <input id="filter-shoes-checkbox" class="filter-form-checkbox" required name="shoes" type="checkbox">
                    <span></span>
                    Shoes
                </label>
            </div>
            <div>
                <label for="product-bags-checkbox">
                    <input id="filter-bags-checkbox" class="filter-form-checkbox" required name="bags" type="checkbox">
                    <span></span>
                    Bag
                </label>
            </div>
        </div>
        

        <a onclick = "submitForm(this)">
            <span></span>
            <span></span>
            <span></span>
            <span></span>
            Filter
        </a>
    </form>
    <p>Changed your mind? <a onclick="HideOverlay()"
            class="cancel-form">Cancel</a></p>
</div>
<!----------------------- end of add product form ---------------------------->